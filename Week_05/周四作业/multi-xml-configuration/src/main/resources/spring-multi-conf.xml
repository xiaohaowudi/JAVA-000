<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                        http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
                        http://www.springframework.org/schema/context
                        http://www.springframework.org/schema/context/spring-context-3.2.xsd http://www.springframework.org/schema/aop https://www.springframework.org/schema/aop/spring-aop.xsd">


    <bean id="student1" class="com.javacamp.homework5.multi_xml_configuration.Student">
        <constructor-arg name="id" value="1"/>
        <constructor-arg name="name" value="Mike"/>
    </bean>

    <bean id="student2" class="com.javacamp.homework5.multi_xml_configuration.Student">
        <constructor-arg name="id" value="2"/>
        <constructor-arg name="name" value="Jamse"/>
    </bean>

    <bean id="student3" class="com.javacamp.homework5.multi_xml_configuration.Student">
        <constructor-arg name="id" value="3"/>
        <constructor-arg name="name" value="Harry"/>
    </bean>

    <bean id="student4" class="com.javacamp.homework5.multi_xml_configuration.Student">
        <constructor-arg name="id" value="4"/>
        <constructor-arg name="name" value="LiMing"/>
    </bean>

    <bean id="student5" class="com.javacamp.homework5.multi_xml_configuration.Student">
        <constructor-arg name="id" value="5"/>
        <constructor-arg name="name" value="XiaoHong"/>
    </bean>

    <bean id="klass1" class="com.javacamp.homework5.multi_xml_configuration.Klass">
        <property name="students">
            <list>
                <ref bean="student1" />
                <ref bean="student2" />
            </list>
        </property>
    </bean>

    <bean id="klass2" class="com.javacamp.homework5.multi_xml_configuration.Klass">
        <property name="students">
            <list>
                <ref bean="student3" />
                <ref bean="student4" />
                <ref bean="student5" />
            </list>
        </property>
    </bean>

    <bean id="school" class="com.javacamp.homework5.multi_xml_configuration.School">
        <property name="class1" ref="klass1"/>
        <property name="class2" ref="klass2"/>
    </bean>




</beans>